{% extends "base.html.twig" %}

{% block css %}
    <link rel="stylesheet" href="/css/dashboard.css">
{% endblock %}

{% block body %}
{% include "navbar.html.twig" %}

{% if msg %}
    <div class="alert alert-{{msg[1]}} alert-dismissible" role="alert">
        {{msg[0]}}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
{% endif %}

<div class="container my-5">
    <div class="card">
        <div class="card-header bg-secondary text-white">
            <h2 class="card-title">Tout les Intervenants</h2>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>matricule</th>
                            <th>nom</th>
                            <th>prenom</th>
                            <th>tel</th>
                            <th>email</th>
                            <th>user_id</th>
                            <th>standardiste_id</th>
                            <th>created_at</th>
                            <th>updated_at</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for intervenant in intervenants %}
                            <tr>
                                <td>{{ intervenant.matricule }}</td>
                                <td>{{ intervenant.nom }}</td>
                                <td>{{ intervenant.prenom }}</td>
                                <td>{{ intervenant.tel }}</td>
                                <td>{{ intervenant.email }}</td>
                                <td>{{ intervenant.user_id }}</td>
                                <td>{{ intervenant.standardiste_id }}</td>
                                <td>{{ intervenant.created_at }}</td>
                                <td>{{ intervenant.updated_at }}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock body %}
