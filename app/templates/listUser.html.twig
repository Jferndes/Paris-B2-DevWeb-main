{% extends "base.html.twig" %}

{% block body %}
{% include "navbar.html.twig" %}
{% if msg %}
    <div class="alert alert-{{ msg[1] }}" role="alert">
        {{ msg[0] }}
    </div>
{% endif %}

<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.email }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock body %}
