{% extends "base_auth.html.twig" %}

{% block body %}


<div class="container justify-content-center">
    {% if msg %}
    <div class="row">
        <div class="col-3"></div>
        <div class="col-6">
            <div class="alert alert-{{msg[1]}}" role="alert">
                {{msg[0]}}
            </div>
        </div>
        <div class="col-3"></div>
    </div>
    {% endif %}
    <div class="row">
        <div class="col-3"></div>
        <div class="col-6">
            <div class="card mt-5">
                <div class="card-header text-center">
                    <h2>Connexion</h2>
                </div>
                <div class="card-body">
                    <form action="" method="post">
                        <div class="mb-3">
                            <label for="email" class="form-label">Email address</label>
                            <input 
                                class="form-control"
                                type="email"
                                id="email"
                                name="email"
                                required="required"
                                placeholder="Entrez votre email"
                            />
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <input 
                                class="form-control"
                                type="password"
                                id="password"
                                name="password"
                                required="required"
                                placeholder="Entrez votre password"
                            />
                        </div>
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary" value="Connexion" name="connexion">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock body %}
